---
import "../../styles/singleview.css";
import Layout from "../../layouts/Layout.astro";

const member = {
  name: "Maya Elizabeth",
  slug: "maya-elizabeth",
  title: "Chief Operating Officer",
  img: "/images/maya.webp",
  description_long: `
    Maya Elizabeth is a results-driven Chief Operating Officer with a passion for 
    streamlining operations and improving business efficiency. With a decade of experience 
    in strategic planning and organizational management, she has successfully led companies 
    toward greater productivity and profitability.
  `,
  experience: `
    Maya has an extensive background in business operations, process optimization, 
    and leadership development. She specializes in implementing sustainable business strategies, 
    fostering cross-functional collaboration, and ensuring seamless day-to-day operations. 
    Her leadership style prioritizes innovation, adaptability, and efficiency, helping teams 
    exceed performance expectations while maintaining strong company culture.
  `,
  social_links: [
    { platform: "facebook", url: "https://facebook.com/mayaelizabeth", icon: "/images/Facebook.png" },
    { platform: "instagram", url: "https://instagram.com/mayaelizabeth", icon: "/images/Instagram.png" },
    { platform: "twitter", url: "https://twitter.com/mayaelizabeth", icon: "/images/Twitter.png" },
    { platform: "linkedin", url: "https://linkedin.com/in/mayaelizabeth", icon: "/images/LinkedIn.png" },
  ],
};
---

<Layout>
  <section class="team-profile">
    <!-- Left Side: Image & Background -->
    <div class="profile-image-wrapper">
      <div class="pattern"></div>
      <div class="green-box"></div>
      <img src={member.img} alt={member.name} class="profile-image" />
    </div>

    <!-- Right Side: Team Member Information -->
    <div class="profile-info">
      <!-- ðŸ”¹ Title & Social Icons (Fixed Alignment) -->
      <div class="profile-header">
        <div class="profile-title">
          <h1>{member.name}</h1>
          <h2>{member.title}</h2>
        </div>
        <div class="social-icons">
          {
            member.social_links.map((social) => (
              <a href={social.url} target="_blank" aria-label={social.platform} class="social-link" data-platform={social.platform}>
                <img src={social.icon} alt={social.platform} class="social-icon" />
              </a>
            ))
          }
        </div>
      </div>

      <p class="description">{member.description_long}</p>

      <hr />

      <h3>Past experience</h3>
      <p class="experience">{member.experience}</p>
    </div>
  </section>

  <!-- FontAwesome for icons -->
  <script src="https://kit.fontawesome.com/YOUR_KIT_CODE.js" crossorigin="anonymous"></script>
</Layout>
